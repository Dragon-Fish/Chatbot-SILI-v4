{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": false,
    "noEmit": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@satorijs/element",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/plugins/*"],
      "$utils/*": ["src/utils/*"]
    }
  },
  "include": ["src", ".debug", "scripts"]
}
